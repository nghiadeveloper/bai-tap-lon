package baitaplon01;

import java.util.Scanner;

public class baitap06 {

	public static void main(String[] args) {


		final double EXCHANGE_RATE = 23500; // Tỷ giá VND-USD
		
        Scanner scanner = new Scanner(System.in);

        // Nhập số USD từ bàn phím
        System.out.print("Nhập vào số USD: ");
        double usd = scanner.nextDouble();

        // Tính ra tiền VNĐ
        double vnd = usd * EXCHANGE_RATE;

        // Xuất kết quả
        System.out.printf("Số tiền tương ứng là: %.2f VND\n", vnd);

	}

}
